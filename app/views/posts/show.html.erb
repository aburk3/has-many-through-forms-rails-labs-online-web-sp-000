<h1><%= @post.title %></h1>

<p><%= @post.content %></p>

Categories: <br>
<ul>
  <% @post.categories.each do |c| %>
  <li><%= c.name %></li>
  <% end %>
</ul>

  <%= form_for @post.comments.build do |f| %>
    New Comment: <%= f.text_field :content %><br>
    <%= f.hidden_field :post_id %>
    <%= f.collection_select(:user_id, @users, :id, :username, include_blank: true ) %>
    <%= f.fields_for :user, @post.comments.last.build_user do |user_fields| %>
      Username:
      <%= user_fields.text_field :username %><br>
    <% end %>
    <%= f.submit %>
  <% end %>

  <p>Comments:</p><br>
  <% @post.comments.group_by(&:user).each do |user, comments| %>
    <% comments.each do |comment| %>
      <% if comment.id %>
        <%= link_to user.username, user %>
        <% comments.each do |real_comment| %>
          <pre>says: <%= real_comment.content %><br></pre>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
